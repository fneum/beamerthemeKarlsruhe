\newif\if@SectionSlides
\@SectionSlidesfalse
\DeclareOption{sectionslides}{\@SectionSlidestrue}
\ProcessOptions

\if@SectionSlides
\AtBeginSection[]{
	\begin{frame}
	\vfill
	\centering
	\begin{beamercolorbox}[
		ht=10ex,
		sep=1em,
		wd={\paperwidth},
	 	center
	 	]{section}
		\Large\usebeamerfont{title}\insertsectionhead\par%
	\end{beamercolorbox}
	\vfill
\end{frame}
}
\fi

