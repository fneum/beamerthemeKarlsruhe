\def\blockcolsep{.5ex}

%% NORMAL
\defbeamertemplate*{block begin}{Karlsruhe}{
  \par\vskip\medskipamount%
  \ifx\insertblocktitle\@empty
  \else
  \begin{beamercolorbox}[colsep*=\blockcolsep]{block title}
    {\rule[-0.4ex]{0mm}{2ex}\insertblocktitle}%
  \end{beamercolorbox}%
  \fi
  {\parskip0pt\par}%
  \ifbeamercolorempty[bg]{block title}
  {}
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[colsep*=\blockcolsep,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
}
\defbeamertemplate*{block end}{Karlsruhe}{\end{beamercolorbox}\vskip\smallskipamount}

